---
// HowTo.astro
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

import messengerIcon from "../assets/messenger-icon.svg";
import instagramIcon from "../assets/instagram-icon.svg";
import whatsappIcon from "../assets/whatsapp-icon.svg";
---

<Layout title="About | Chat Rewind">
  <main class="main">
    <div class="card-container">
      <Card title="Select your App" className="card">
        <div class="flex justify-center gap-4 mb-6">
          <Image src={messengerIcon} alt="Messenger" width={50} height={50} />
          <Image src={instagramIcon} alt="Instagram" width={50} height={50} />
          <Image src={whatsappIcon} alt="WhatsApp" width={50} height={50} />
        </div>
        <ol class="instruction-list">
          <li>Open the chat you want</li>
          <li>Tap More options &gt; More &gt; Export chat</li>
          <li>Tap Include media</li>
          <li>Download your files</li>
        </ol>
      </Card>

      <Card title="Upload File(s)" className="card">
        <div class="flex justify-center gap-4 mb-6">
          <button class="btn btn-secondary btn-secondary:hover">Upload!</button>
          <p>Want more insight into your chats? Try out AI summarizer!</p>
          <button class="btn btn-tertiary">Summarize!</button>
        </div>
      </Card>
    </div>
    <button class="btn btn-tertiary" id="backBttn">&lt;&lt;</button>
  </main>
</Layout>

<script>
  document.getElementById("backBttn").onclick = () => {
    window.location.href = "/";
  };
</script>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 2rem;
    justify-content: flex-start;
    min-height: 100vh;
    text-align: center;
    padding: 2rem 1rem;
    font-family: monospace;
  }

  .card-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100%;
    max-width: 1200px;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .card-container {
      flex-direction: row;
    }
  }

  .card {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .btn {
    font-size: 1rem;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border-radius: 9px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn-secondary {
    background-color: #ec4899;
    color: #ffffff;
  }

  .btn-secondary:hover {
    background-color: #a2034b;
  }

  .btn-tertiary {
    background-color: #000000;
    color: #ffffff;
    border: 1px solid #ffffff;
  }

  .btn-tertiary:hover {
    background-color: #ffffff;
    color: #000000;
  }

  .instruction-list {
    list-style-position: outside;
    padding-left: 1.5em;
    margin-left: 0;
    text-align: left;
  }
</style>
