---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

import messengerIcon from "../assets/messenger-icon.svg";
import instagramIcon from "../assets/instagram-icon.svg";
import whatsappIcon from "../assets/whatsapp-icon.svg";
---

<Layout title="Welcome to CHAT R3WIND">
  <main>
    <p>Welcome to</p>
    <h1 class="hero layers vt323-regular" data-text="CHAT R3WIND&lt;&lt;">CHAT R3WIND&lt;&lt;</h1>
    <p>
      A Spotify-like wrapped for all your chats where your data <span
        class="highlight">never</span
      > leaves your browser.
    </p>

    <div class="btn">
      <button class="btn btn-primary" id="getStartedBtn">GET STARTED</button>
      <button class="btn btn-secondary"> EXAMPLES </button>
    </div>

    <div class="flex justify-center space-x-6 icons">
      <Image src={messengerIcon} alt="Messenger" width={100} height={100} />
      <Image src={instagramIcon} alt="Instagram" width={105} height={105} />
      <Image src={whatsappIcon} alt="WhatsApp" width={100} height={100} />
    </div>
  </main>
</Layout>

<script>
  document.getElementById("getStartedBtn").onclick = () => {
    window.location.href = "/upload";
  };
</script>

<style>

/* Layered Effect for Title */

h1 {
  font-size: 10rem;
  margin: 0;
}

.layers {
  position: relative;
}

.layers::before,
.layers::after {
  content: attr(data-text);
  position: absolute;
  width: 100%;
  z-index: -1;
}

.layers::before {
  top: -0px;
  left: -5px;
  color: #E52082;
}

.layers::after {
  top: 0;
  left: 5px;
  color: #25DEC0;
}


/* Other Stuff */


  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    text-align: center;
    padding: 2rem 1rem;
    font-family: monospace;
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  p {
    font-size: 2rem;
    margin-left: 10rem;
    margin-right: 10rem;
  }

  /* h1 {
    font-size: 10rem;
    font-weight: bold;
    background: #ffffff; linear-gradient(to right, #2dd4bf, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
  } 
  */

  .btn {
    display: flex;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    border-radius: 9px;
    transition: all 0.3s ease;
    letter-spacing: 0.05em;
    margin: 2rem;
    font-family: monospace;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  }

  .btn-primary {
    background-color: #2dd4bf;
  }

  .btn-primary:hover {
    background-color: #0c776b;
  }

  .btn-secondary {
    background-color: #ec4899;
    color: #ffffff;
  }

  .btn-secondary:hover {
    background-color: #a2034b;
  }

  .icons {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  .highlight {
    background: linear-gradient(to right, #2dd4bf, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: bold;
    font-style: italic;
    padding: 0 0.2em;
  }
</style>
