<style>
  
main {
  display: flex;
  flex-flow: row nowrap;

  overflow: scroll;
  scroll-snap-type: x mandatory;

  width: 100vw;
  height: 100vh;
}

.card {
  scroll-snap-align: center;
  scroll-snap-stop: always;
  scroll-margin: 0;
  
  height: 100vh;
  width: 100vw;
}

.cards {
  margin: 0;
  padding: 0;
  display: flex;
}

.header {
  scroll-snap-align: center;
  scroll-snap-stop: always;
  scroll-margin: 0;
  flex-shrink: 0;
  
  width: 100vw;
  height: 100vh;
}

@media only screen and (min-width: 721px) {
  main {
    display: block;
    max-width: 1440px;
    margin: auto;
    overflow: visible; 
  }

  .cards {
    columns: 3 450px;
    column-gap: 1rem;
    display: block;
  }

  .card {
    height: auto;
    width: auto;
    margin-bottom: 1rem;
  }

  .header {
    height: auto;
    width: 100%;
  }
}

