---
interface Props {
  title: string;
  className?: string;
}

const { title, className = "" } = Astro.props;
---

<div class={`card ${className}`}>
  <h2 class="title">{title}</h2>
  <slot />
</div>

<style>
  .card {
    background-color: #000000;
    border-radius: 1.5rem;
    border: 1px solid #ffffff;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
  }

  .title {
    color: #ffffff;
  }
</style>
